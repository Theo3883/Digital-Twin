<MudChip T="string"
         Style="@ChipStyle"
         Size="Size.Small">
    @Label
</MudChip>

@code {
    [Parameter] public AirQualityLevel Level { get; set; }

    private string Label => Level switch
    {
        AirQualityLevel.Good => "Good",
        AirQualityLevel.Moderate => "Moderate",
        AirQualityLevel.Unhealthy => "Unhealthy",
        _ => "Unknown"
    };

    private string ChipStyle => Level switch
    {
        AirQualityLevel.Good => "background: rgba(48, 209, 88, 0.15); color: var(--green-positive); border-radius: var(--radius-chip); border: 1px solid rgba(48, 209, 88, 0.3);",
        AirQualityLevel.Moderate => "background: rgba(255, 149, 0, 0.15); color: var(--amber-warning); border-radius: var(--radius-chip); border: 1px solid rgba(255, 149, 0, 0.3);",
        AirQualityLevel.Unhealthy => "background: rgba(255, 45, 85, 0.15); color: var(--red-critical); border-radius: var(--radius-chip); border: 1px solid rgba(255, 45, 85, 0.3);",
        _ => "background: var(--glass-bg-1); color: var(--text-sec); border-radius: var(--radius-chip);"
    };
}
