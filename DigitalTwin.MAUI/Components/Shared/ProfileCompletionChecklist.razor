@* ProfileCompletionChecklist.razor â€” Visual checklist of profile completion steps *@

<MudCard Class="glass-card" Elevation="0">
    <MudCardContent>
        <MudText Typo="Typo.subtitle1" Style="color: var(--text-main); font-weight: 600; margin-bottom: 12px;">
            Profile Completion
        </MudText>

        <MudStack Spacing="2">
            @foreach (var item in Items)
            {
                <div style="display: flex; align-items: center; gap: 10px;">
                    @if (item.IsChecked)
                    {
                        <div style="width: 22px; height: 22px; border-radius: 50%; background: var(--green-positive); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                            <MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Style="color: white; font-size: 14px;" />
                        </div>
                        <MudText Typo="Typo.body2" Style="color: var(--text-main);">@item.Label</MudText>
                    }
                    else
                    {
                        <div style="width: 22px; height: 22px; border-radius: 50%; border: 2px solid rgba(255,255,255,0.15); flex-shrink: 0;"></div>
                        <MudText Typo="Typo.body2" Style="color: var(--text-sec);">@item.Label</MudText>
                    }
                </div>
            }
        </MudStack>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public List<ChecklistItem> Items { get; set; } = new();

    public record ChecklistItem(bool IsChecked, string Label);
}
