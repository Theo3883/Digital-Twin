@using IOSHealthApp.Domain.Enums

<MudChip T="string"
         Style="@ChipStyle"
         Size="Size.Small">
    @Label
</MudChip>

@code {
    [Parameter] public AirQualityLevel Level { get; set; }

    private string Label => Level switch
    {
        AirQualityLevel.Good => "Good",
        AirQualityLevel.Moderate => "Moderate",
        AirQualityLevel.Unhealthy => "Unhealthy",
        _ => "Unknown"
    };

    private string ChipStyle => Level switch
    {
        AirQualityLevel.Good => "background: #065f46; color: #6ee7b7;",
        AirQualityLevel.Moderate => "background: #78350f; color: #fcd34d;",
        AirQualityLevel.Unhealthy => "background: #7f1d1d; color: #fca5a5;",
        _ => "background: #374151; color: #9ca3af;"
    };
}
